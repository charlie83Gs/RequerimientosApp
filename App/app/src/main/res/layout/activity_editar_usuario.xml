<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vista.EditarUsuario">

    <RelativeLayout
        android:layout_width="384dp"
        android:layout_height="513dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <Button
            android:id="@+id/button_agregar_usuario"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="21dp"
            android:background="@color/colorSecondary"
            android:text="Confirmar"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp"
            android:text="Editar usuario"
            android:textAppearance="@android:style/TextAppearance.Large" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView34"
            android:layout_marginTop="154dp"
            android:text="Nombre" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView30"
            android:layout_marginTop="207dp"
            android:text="Contraseña" />

        <TextView
            android:id="@+id/textView32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView30"
            android:layout_marginBottom="227dp"
            android:text="Número" />

        <TextView
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView30"
            android:layout_marginBottom="169dp"
            android:text="Correo" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="110dp"
            android:layout_toStartOf="@+id/textView29"
            android:text="Tipo de Usuario" />

        <EditText
            android:id="@+id/correoAddUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView33"
            android:layout_alignStart="@+id/textView29"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView32"
            android:layout_alignStart="@+id/textView29"
            android:ems="10"
            android:inputType="phone" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="213dp"
            android:layout_height="38dp"
            android:layout_alignBottom="@+id/textView30"
            android:layout_alignStart="@+id/textView29">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="213dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/textView31"
            android:layout_alignStart="@+id/textView29">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <Spinner
            android:id="@+id/spinner_tipo_usuario"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/correoAddUser"
            android:layout_alignTop="@+id/textView34" />

        <TextView
            android:id="@+id/textView35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView30"
            android:layout_marginTop="94dp"
            android:text="Seleccionar usuario" />

        <Spinner
            android:id="@+id/spinner9"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/correoAddUser"
            android:layout_alignTop="@+id/textView35" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>