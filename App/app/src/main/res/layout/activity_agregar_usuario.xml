<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vista.AgregarUsuario">

    <RelativeLayout
        android:layout_width="384dp"
        android:layout_height="513dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <Button
            android:id="@+id/button_agregar_usuario"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="49dp"
            android:background="@color/colorSecondary"
            android:text="Confirmar"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:text="Agregar usuario"
            android:textAppearance="@android:style/TextAppearance.Large" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="79dp"
            android:text="Nombre"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="25dp" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView30"
            android:layout_marginTop="137dp"
            android:text="Contraseña"
            android:layout_alignLeft="@+id/textView30" />

        <TextView
            android:id="@+id/textView32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView30"
            android:layout_marginTop="198dp"
            android:text="Número"
            android:layout_alignLeft="@+id/textView30" />

        <TextView
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView30"
            android:layout_marginBottom="230dp"
            android:text="Correo"
            android:layout_alignLeft="@+id/textView30" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView30"
            android:layout_marginBottom="167dp"
            android:text="Tipo de Usuario"
            android:layout_alignLeft="@+id/textView30" />

        <EditText
            android:id="@+id/correoAddUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView33"
            android:layout_alignStart="@+id/textView29"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:layout_alignLeft="@+id/textView29" />

        <EditText
            android:id="@+id/numeroAddUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView32"
            android:layout_alignStart="@+id/textView29"
            android:ems="10"
            android:inputType="phone"
            android:layout_alignLeft="@+id/textView29" />

        <Spinner
            android:id="@+id/spinner_tipo_usuario"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/correoAddUser"
            android:layout_alignTop="@+id/textView34"
            android:layout_alignRight="@+id/correoAddUser" />

        <EditText
            android:id="@+id/nameAddUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView30"
            android:layout_alignLeft="@+id/textView29"
            android:layout_alignStart="@+id/textView29"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/contrasennaAddUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView29"
            android:layout_marginTop="121dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_alignLeft="@+id/textView29" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>